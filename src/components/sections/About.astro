---
import type { I18NSection, HomeLangAbout } from '@/types/i18n.type'

type Props = I18NSection<HomeLangAbout>

import SectionLayout from '@/layouts/SectionLayout.astro'

const { LANG } = Astro.props
---

<SectionLayout id={LANG.ID} title={LANG.TITLE}>
	{
		LANG.DESC.map((txt, i) => (
			<p
				class:list={['text-base leading-normal text-text', { 'mb-6': i !== LANG.DESC.length - 1 }]}
				set:html={txt}
			/>
		))
	}
</SectionLayout>
