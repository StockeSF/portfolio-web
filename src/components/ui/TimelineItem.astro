---
import type { HomeLangEducationListItem as Props } from '@/types/i18n.type'

import { Icon } from 'astro-icon/components'

import Pill from '@comp/ui/Pill.astro'

const { ICON, TITLE, SUBTITLE, TIME, LATEST } = Astro.props
---

<li class="ms-8">
	<span
		class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-accent ring-8 ring-accent/25"
	>
		<Icon name={ICON} size={18} class="text-title" />
	</span>

	<h3 class="flex items-center text-lg font-semibold text-title">
		{TITLE}

		{typeof LATEST !== 'undefined' && <Pill as="span" class="ms-4" label={'Latest'} border />}
	</h3>

	<h4 class="mb-2 font-medium text-accent">{SUBTITLE}</h4>

	<time class="text-label text-xs font-semibold uppercase leading-none tracking-wide">
		{TIME}
	</time>
</li>
