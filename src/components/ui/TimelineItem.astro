---
import type { HomeLangEducationListItem } from '@/types/i18n.type'

import Icon from '@comp/Icon.astro'

import Pill from '@comp/ui/Pill.astro'

interface Props {
  ITEM: HomeLangEducationListItem
  LATEST_TEXT: string
}

const { ITEM, LATEST_TEXT } = Astro.props
const { ICON, TITLE, SUBTITLE, TIME, LATEST = false } = ITEM
---

<li class="ms-8">
  <span
    class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-accent ring-8 ring-accent/25"
  >
    <Icon name={ICON} size={18} class="text-white" />
  </span>

  <h3 class="flex items-center text-lg font-semibold text-title">
    {TITLE}

    {LATEST && <Pill as="span" class="ms-4" label={LATEST_TEXT} border />}
  </h3>

  <h4 class="mb-2 font-medium text-accent">{SUBTITLE}</h4>

  <time class="text-xs font-semibold uppercase leading-none tracking-wide text-label">
    {TIME}
  </time>
</li>
