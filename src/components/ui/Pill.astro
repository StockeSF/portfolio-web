---
import type { HTMLTag, Polymorphic } from 'astro/types'

import { Icon } from 'astro-icon/components'

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  label: string
  class?: string
  border?: boolean
  icon?: string
}>

const { as: Tag, label, class: className, icon, border = true } = Astro.props
---

<Tag
  class:list={[
    'inline-flex items-center gap-1.5 rounded-full bg-bg-pill/20 px-3 py-1 text-xs font-semibold text-accent sm:text-sm',
    className,
    { 'border border-accent': border === true },
  ]}
>
  {typeof icon !== 'undefined' && <Icon name={icon} size={16} />}
  {label}
</Tag>
