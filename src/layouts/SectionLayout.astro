---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  id: string
  title?: string
  class?: string
  sectionAttributes?: HTMLAttributes<'section'>
}

const { id, title, class: className, sectionAttributes } = Astro.props
const baseClasses = 'scroll-mt-6 px-6 lg:px-0'
---

<section id={id} class:list={[baseClasses, className]} {...sectionAttributes}>
  {
    typeof title !== 'undefined' && (
      <header class="mb-10 w-fit">
        <h2 class="inline-block text-sm font-bold uppercase tracking-wider text-title">{title}</h2>
      </header>
    )
  }

  <slot />
</section>
